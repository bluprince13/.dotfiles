{
	// OVERALL
	"sync.gist": "6609862d535743e075090db8f2efa450",
	"files.autoSave": "afterDelay",
	"workbench.colorTheme": "Solarized Dark",
	"workbench.sideBar.location": "left",
	"editor.formatOnSave": true,
	"editor.minimap.enabled": false,
	// TERMINAL
	"terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.fontFamily": "Meslo LG M for Powerline",
    "terminal.integrated.fontSize": 12,
	"terminal.external.osxExec": "iTerm.app",
	// GIT
	"git.confirmSync": false,
	"git.autofetch": true,
	"git.enableSmartCommit": true,
	// VIM
	"vim.easymotion": true,
	"vim.insertModeKeyBindings": [
		{
			"before": ["j", "j"],
			"after": ["<esc>"]
		}
	],
	// LATEX
	"latex-workshop.latex.autoBuild.onSave.enabled": true,
	"latex-workshop.view.pdf.viewer": "tab",
	"latex-workshop.latex.tools": [
		{
			"name": "latexmk",
			"command": "latexmk",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"-pdf",
				"%DOC%"
			]
		},
		{
			"name": "pdflatex",
			"command": "pdflatex",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"%DOC%"
			]
		},
		{
			"name": "bibtex",
			"command": "bibtex",
			"args": ["%DOCFILE%"]
		},
		{
			"name": "lualatex",
			"command":"lualatex",
			"args": ["-synctex=1", "-interaction=nonstopmode", "%DOC%"]
		} 
	],	
	"latex-workshop.latex.recipes": [
		{
			"name": "lualatex",
			"tools": ["lualatex"]
		},	
		{
			"name": "latexmk",
			"tools": ["latexmk"]
		},
		{
			"name": "pdflatex -> bibtex -> pdflatex*2",
			"tools": ["pdflatex", "bibtex", "pdflatex", "pdflatex"]
		},
	],
	"latex-workshop.message.update.show": false,
	"latex-workshop.latex.clean.enabled": true,
	"latex-workshop.latex.clean.fileTypes": [
		"*.aux",
		"*.bbl",
		"*.blg",
		"*.idx",
		"*.ind",
		"*.lof",
		"*.lot",
		"*.out",
		"*.toc",
		"*.acn",
		"*.acr",
		"*.alg",
		"*.glg",
		"*.glo",
		"*.gls",
		"*.gz",
		"*.ist",
		"*.fls",
		"*.log",
		"*.fdb_latexmk",
		"*temp.tex"
	],
	"latex-workshop.latex.autoClean.run": "onBuilt",
	"latex-workshop.latex.autoBuild.run": "onFileChange",
	// General
	"todohighlight.isEnable": true,
	"code-runner.runInTerminal": true,  // bugfix since code runner doesn't use venv by default
	// Styling
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"rewrap.autoWrap.enabled": true,
}